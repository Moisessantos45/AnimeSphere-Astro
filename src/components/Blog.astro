---
import type { Anime } from "../Types/typeMoe";
const getAllProyects = async () => {
  const res = await fetch(
    "https://api.jikan.moe/v4/top/anime?filter=bypopularity"
  );
  const data = await res.json();
  return data.data;
};

const datos: Anime[] = await getAllProyects();
