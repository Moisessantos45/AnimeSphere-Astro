---
import Cards from "./Cards.astro";
import Aside from "./Aside.astro";
---

<main class="w-12/12 m-auto grid main_container justify-items-center">
  <article class="w-full flex flex-col gap-8">
    <Cards mal_id="1" />
    <Cards mal_id="5" />
    <Cards mal_id="2" />
  </article>
  <Aside title="home" />
</main>

<style>
  .main_container {
    grid-template-columns: 70% 1fr;
    grid-auto-flow: row;
    grid-auto-rows: auto;
  }
  @media (max-width: 985px) {
    .main_container {
      grid-template-columns: 1fr;
    }
  }
</style>
